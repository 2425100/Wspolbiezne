<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:GreeterViewModel/>
    </Window.DataContext>
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,109,0,0" TextWrapping="Wrap" Text="{Binding Path=text, Mode=TwoWay}" VerticalAlignment="Top" Width="224" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" x:Name="Box"/>
        <Button Content="Zmień" HorizontalAlignment="Center" Height="41" Margin="0,192,0,0" VerticalAlignment="Top" Width="120" Command="{Binding UpdateTextCommand}" CommandParameter="{Binding Path=Box.Text}"/>
        <Label Content="{Binding Path=text, Mode=OneWay}" HorizontalAlignment="Center" Margin="0,72,0,0" VerticalAlignment="Top" Width="213" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
